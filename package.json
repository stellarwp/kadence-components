{
	"name": "@kadence/components",
	"version": "1.1.0",
	"description": "Shared Kadence UI components for WordPress block plugins.",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"exports": {
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"default": "./dist/esm/index.js"
		},
		"./package.json": "./package.json"
	},
	"sideEffects": [
		"./dist/**/*.scss",
		"./dist/**/*.css"
	],
	"files": [
		"dist",
		"src",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"prettier": "prettier . --write",
		"clean": "rimraf dist",
		"copy:assets": "node scripts/copy-assets.js",
		"build:esm": "babel src --out-dir dist/esm --env-name esm --extensions \".js,.jsx\" --source-maps",
		"build:cjs": "babel src --out-dir dist/cjs --env-name cjs --extensions \".js,.jsx\" --source-maps",
		"build": "npm run clean && npm run copy:assets && npm run build:esm && npm run build:cjs",
		"prepare": "npm run build"
	},
	"dependencies": {
		"@floating-ui/react": "^0.26.16",
		"react-container-dimensions": "^1.4.1"
	},
	"peerDependencies": {
		"@kadence/helpers": "*",
		"@kadence/icons": "*",
		"react": ">=17 <19",
		"react-dom": ">=17 <19"
	},
	"devDependencies": {
		"@babel/cli": "^7.26.0",
		"@babel/core": "^7.26.0",
		"@wordpress/babel-preset-default": "^8.0.0",
		"@wordpress/prettier-config": "^2.25.13",
		"fs-extra": "^11.2.0",
		"prettier": "^2.8.8",
		"rimraf": "^5.0.5"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/stellarwp/kadence-components.git"
	},
	"keywords": [
		"components",
		"kadence",
		"wordpress",
		"gutenberg"
	],
	"author": "kadencewp",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/stellarwp/kadence-components/issues"
	},
	"homepage": "https://github.com/stellarwp/kadence-components#readme",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	}
}
